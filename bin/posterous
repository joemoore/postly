#!/usr/bin/env ruby

$:.unshift(File.dirname(__FILE__) + '/../lib')

begin
  require 'posterous'
  require 'irb'
rescue LoadError
  require 'rubygems'
  retry
end

include Posterous

IRB.setup(nil)
irb = IRB::Irb.new

IRB.conf[:MAIN_CONTEXT] = irb.context

irb.context.evaluate("require 'irb/completion'", 0)

trap("SIGINT") do
  irb.signal_handle
end

catch(:IRB_EXIT) do
  irb.eval_input
end